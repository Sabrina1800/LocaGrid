<%= form_for(idea) do |f| %>
<% if idea.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

  <ul>
    <% idea.errors.full_messages.each do |message| %>
    <li><%= "message" %></li>
    <% end %>
  </ul>
</div>
<% end %>

<br>
<div class="field">
  <%= f.label :picture %>
  <%= f.file_field :picture %>
</div>
<br>
<div class="field">
  <%= f.label "Title" %>
  <%= f.text_field :name %>
</div>

<div class="field">
  <%= f.label "Description" %>
  <%= f.text_area :description %>
</div>

<div class="field bottomSpacer">
  <%= f.label "Location" %>
  <br>
  <%= f.text_area :coverage %>
</div>



<div class="field bottomSpacer">
  <%= f.label "Finish Date" %>
  <br>
  <%= f.number_field :date %>
</div>


<div class="accordion">
 <h4>Nitty-gritty details + </h4>
 <br>
 <div>
  <div class="field bottomSpacer">
    <%= f.label :contributor %>
    <br>
    <%= f.text_area :contributor %>
  </div>

  <div class="field bottomSpacer">
    <%= f.label :identifier %>
    <br>
    <%= f.text_area :identifier%>
  </div>

  <div class="field bottomSpacer">
    <%= f.label "Art Type" %>
    <br>
    <%= f.text_field :artformat%>
  </div>

  <div class="field bottomSpacer">
    <%= f.label "Themes" %>
    <br>
    <%= f.text_field :related%>
  </div>

  <div class="field bottomSpacer">
    <%= f.label :rights %>
    <br>
    <%= f.text_field :rights %>
  </div>

  <div class="field bottomSpacer">
    <%= f.label :subject %>
    <br>
    <%= f.text_area :subject %>
  </div>

  <div class="field bottomSpacer">
    <%= f.label "Art type" %>
    <br>
    <%= f.text_area :arttype %>
  </div>
</div>
</div>

<div class="actions bottomSpacer">
  <%= f.submit %>
</div>
<% end %>



<script>
  $(".accordion > div").hide().parent().hover(function(event) {
    $(this).children("div").slideToggle(event.type === "mouseenter");
  });
</script>

